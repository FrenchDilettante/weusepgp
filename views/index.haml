%html
  %head
    %link{rel: "stylesheet", type: "text/css", href: "/style.css"}
    %link{rel: "icon", type: "image/png", href: "/favicon.png"}

    %script{src: "/js/jquery.js"}
    %script{src: "/js/weusepgp.js"}

    %title Because privacy matters - We Use PGP
  %body
    #header
      .container
        .hgroup
          %h1
            %a{href: "/"} WeUsePGP
          .subtitle Because privacy matters

        .flattr
